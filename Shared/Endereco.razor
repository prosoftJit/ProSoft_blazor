@page "/Pages/Endereco"

@using System.ComponentModel.DataAnnotations
@using ProSoft.Data

@namespace ProSoft.Shared

<RadzenFormField Text="Logradouro">
    <RadzenTextBox @bind-Value=endereco.Endereco_logradouro />
</RadzenFormField>

<RadzenFormField Text="NÂº">
    <RadzenNumeric @bind-Value=endereco.Endereco_numero ShowUpDown=false />
</RadzenFormField>

<RadzenFormField Text="Complemento">
    <RadzenTextBox @bind-Value=endereco.Endereco_complemento />
</RadzenFormField>

<RadzenFormField Text="Bairro">
    <RadzenTextBox @bind-Value=endereco.Endereco_bairro />
</RadzenFormField>

<RadzenFormField Text="CEP">
    <RadzenMask @bind-Value=endereco.Endereco_cep Mask="**.***-***" CharacterPattern="[0-9]" />
</RadzenFormField>

<RadzenFormField Text="Cidade">
    <RadzenTextBox @bind-Value=endereco.Endereco_cidade />
</RadzenFormField>

<RadzenFormField Text="UF">
    <RadzenMask @bind-Value=endereco.Endereco_uf Mask="**" CharacterPattern="[A-Z]" />
</RadzenFormField>

@code {
    [Parameter] public iendereco endereco { get; set; } = default!;
}
