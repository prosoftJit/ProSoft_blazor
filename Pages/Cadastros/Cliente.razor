@page "/Cadastros/Cliente"
@using System.ComponentModel.DataAnnotations
@using ProSoft.Data

<RadzenFormField Text="Id do Cliente">
    <RadzenNumeric Format="000000" @bind-Value=Model.idCliente Disabled=true />
</RadzenFormField>
<RadzenFormField Text="Nome">
    <RadzenTextBox @bind-Value=Model.Nome />
</RadzenFormField>

<ProSoft.Shared.Endereco endereco="Model" />

<RadzenFormField Text="CPF">
    <RadzenMask @bind-Value=Model.CPF Mask="***.***.***-**" CharacterPattern="[0-9]" />
</RadzenFormField>
<RadzenFormField Text="E-mail">
    <RadzenTextBox @bind-Value=Model.Email />
</RadzenFormField>
<RadzenFormField Text="RG">
    <RadzenMask @bind-Value=Model.RG Mask="***.***.***-*" CharacterPattern="[0-9]" />
</RadzenFormField>

@code {
    [Parameter] public cliente Model { get; set; } = default!;
}