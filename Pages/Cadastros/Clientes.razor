@page "/Clientes"
@using ProSoft.Data
@using ProSoft.Components
@using Microsoft.EntityFrameworkCore

<GenericTemplate3 TItem=cliente Contexto="ctx" HeaderTitle="Clientes" Items="ctx.clientes.OrderBy(k=>k.Nome)" ModalSize="modal-lg">
    <GridContent>
        <PropertyColumn TProp=string TGridItem=cliente Title="Id" Property='p => p.idCliente.ToString("000000")' Sortable="true" />
        <PropertyColumn TProp=string TGridItem=cliente Title="Nome" Property="p => p.Nome" Sortable="true" />
    </GridContent>
    <ItemEditForm Context="item">
        <ProSoft.Pages.Cadastros.Cliente Model="item" />
    </ItemEditForm>
</GenericTemplate3>
 
@code {
    Contexto ctx = new();
}
