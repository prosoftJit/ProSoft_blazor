@page "/Mercadorias"
@using ProSoft.Data
@using ProSoft.Components

<GenericTemplate3 TItem=mercadoria Contexto="ctx" HeaderTitle="Mercadorias" Items="ctx.mercadorias.OrderBy(k=>k.Descricao)" ModalSize="modal-lg">
    <GridHeaderTemplate>
        <td>Id</td><td>Nome</td>
    </GridHeaderTemplate>
    <GridRowTemplate Context="p">
        <td>@p.IdMercadoria.ToString("000000")'</td>
        <td>@p.Descricao</td>
    </GridRowTemplate>
    <ItemEditForm Context="item">
        <Mercadoria Model="item" Contexto="ctx" />
    </ItemEditForm>
</GenericTemplate3>

@code {
    Contexto ctx = new();
}
