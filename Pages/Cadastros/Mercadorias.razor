@page "/Mercadorias"
@using ProSoft.Data
@using ProSoft.Components

<GenericTemplate3 TItem=mercadoria Contexto="ctx" HeaderTitle="Mercadorias" Items="ctx.mercadorias.OrderBy(k=>k.Descricao)" ModalSize="modal-lg">
    <GridContent>
        <PropertyColumn TProp=string TGridItem=mercadoria Title="Id" Property='p => p.IdMercadoria.ToString("000000")' Sortable="true" />
        <PropertyColumn TProp=string TGridItem=mercadoria Title="Nome" Property="p => p.Descricao" Sortable="true" />
    </GridContent>
    <ItemEditForm Context="item">
        <Mercadoria Model="item" Contexto="ctx" />
    </ItemEditForm>
</GenericTemplate3>

@code {
    Contexto ctx = new();
}
