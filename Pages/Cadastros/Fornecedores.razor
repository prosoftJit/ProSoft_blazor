@page "/Cadastros/Fornecedores"
@using ProSoft.Data
@using ProSoft.Components
@using ProSoft.Pages.Cadastros

<GenericTemplate3 TItem=fornecedor Contexto="ctx" HeaderTitle="Fornecedores" Items="ctx.fornecedores.OrderBy(k=>k.Nome)" ModalSize="modal-lg">
    <GridHeaderTemplate>
        <td>Id</td><td>Nome</td>
    </GridHeaderTemplate>
    <GridRowTemplate Context="p">
        <td>@p.IdFornecedor.ToString("000000")</td>
        <td>@p.Nome</td>
    </GridRowTemplate>
    <ItemEditForm Context="item">
        <ProSoft.Pages.Cadastros.Fornecedor Model="item" Contexto="ctx" />
    </ItemEditForm>
</GenericTemplate3>

@code {
    Contexto ctx = new();
}